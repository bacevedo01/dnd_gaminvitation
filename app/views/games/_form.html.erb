<%= form_for(game) do |f| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2 >
        <%= pluralize(game.errors.count, "error") %>
        prohibited this game from being saved:
      </h2>
      <ul>
        <% game.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="actions">

    <%= f.label :title %>:
    <%= f.text_field :title %><br />

    <%= f.label :players %>:
    <%= f.number_field :players %><br />

    <%= f.label :age %>:
    <%= f.number_field :age %><br />

    <%= f.label :play_time %>:
    <%= f.text_field :play_time %><br />

    <%= f.label :complexity %>:
    <%= f.text_field :complexity %><br />

    <%= f.label :publisher %>:
    <%= f.text_field :publisher %><br />

    <%= f.label :img_url %>:
    <%= f.url_field :img_url %><br />

    <%= f.label :description %>:
    <%= f.text_area :description %><br />

    <%= f.submit %>
  </div>
<% end %>